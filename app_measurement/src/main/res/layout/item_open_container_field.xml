<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/BaseTextAppearance.Paragraph.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        tools:text="Наполненность емкости" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/BaseTextInput"
        android:layout_width="match_parent"
        android:id="@+id/textInputLayout"
        android:layout_height="@dimen/large_control_height"
        android:background="@drawable/bg_outlined_with_radius4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input"
            style="@style/BaseTextAppearance.AppTextInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:hint="Укажите процент наполненности" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/errorText"
        style="@style/BaseTextAppearance.Error"
        android:layout_marginTop="4dp"
        tools:text = "Ошибка"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>