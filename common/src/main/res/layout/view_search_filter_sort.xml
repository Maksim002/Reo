<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_scrollFlags="scroll|enterAlways|snap">

    <include
        android:id="@+id/filterWrapper"
        layout="@layout/view_search_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/sortImageView"
        android:layout_width="@dimen/control_height"
        android:layout_height="@dimen/control_height"
        android:layout_marginVertical="6dp"
        android:background="@drawable/bg_outlined_with_radius4_filled_with_ripple"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/default_padding"
        app:srcCompat="@drawable/ic_sort_by_alpha_24"
        app:tint="?colorAccent" />

</LinearLayout>