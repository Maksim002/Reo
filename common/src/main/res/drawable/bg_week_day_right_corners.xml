<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners
                android:bottomRightRadius="@dimen/default_cell_size"
                android:topRightRadius="@dimen/default_cell_size" />
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" />
            <solid android:color="@color/weekday_background_selector" />
        </shape>
    </item>
    <item>
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="@android:color/black" />
                    <corners
                        android:bottomRightRadius="@dimen/default_cell_size"
                        android:topRightRadius="@dimen/default_cell_size" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>
