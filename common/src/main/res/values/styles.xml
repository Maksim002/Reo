<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/teal</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <item name="colorOnSurface">@color/onSurfaceColor</item>
        <item name="colorControlHighlight">@color/rippleLight</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnBackground">@color/onBackgroundColor</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:navigationBarColor">@color/navBarOverlay</item>
        <item name="android:statusBarColor">@color/statusBarOverlay</item>
        <item name="android:listDivider">@drawable/bg_divider</item>
        <item name="errorTextColor">@color/danger_normal</item>
        <item name="errorColor">@color/razzmatazz</item>
        <item name="alertDialogTheme">@style/Theme.Alert.Dialog</item>
    </style>

    <style name="BottomBarStyle">
        <item name="android:background">@color/bottomBarBackground</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColorPrimary">?colorOnSurface</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="android:textAppearance">@style/BaseTextAppearance.Headline4</item>
    </style>

    <style name="ToolbarPopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?colorOnSurface</item>
    </style>

    <style name="Theme.Alert.Dialog" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowTitleStyle">@style/BaseTextAppearance.ParagraphSmallBold</item>
        <item name="android:windowTitleSize">@dimen/medium_text_size</item>
        <item name="android:textAppearanceSmall">@style/BaseTextAppearance.Small</item>
        <item name="android:textColorPrimary">@color/onSurfaceColor</item>
        <item name="android:colorAccent">@color/onSurfaceColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/BaseTextAppearance.ParagraphSmallBold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sans_pro_regular</item>
        <item name="android:textColor">@color/onSurfaceColor</item>
    </style>

    <style name="RadioButtonOverlay">
        <item name="buttonTint">@color/radio_button_color</item>
        <item name="android:textAppearance">@style/BaseTextAppearance</item>
        <item name="android:textColor">@color/onSurfaceColor</item>
    </style>

    <style name="BaseTextAppearance.Headline4">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="fontFamily">@font/sans_pro_semibold</item>
    </style>

    <style name="BaseTextAppearance.Headline3">
        <item name="android:textSize">@dimen/headline3_text_size</item>
        <item name="fontFamily">@font/sans_pro_semibold</item>
    </style>

    <style name="BaseTextAppearance.Paragraph">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="fontFamily">@font/sans_pro_regular</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="BaseTextAppearance.Paragraph.Small">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="BaseTextAppearance.Small">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="fontFamily">@font/sans_pro_regular</item>
    </style>

    <style name="BaseTextAppearance.ParagraphLarge">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="fontFamily">@font/sans_pro_regular</item>
    </style>

    <style name="BaseTextAppearance.DefaultParagraphBold">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="fontFamily">@font/sans_pro_semibold</item>
    </style>

    <style name="BaseTextAppearance.ParagraphSmallBold">
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="fontFamily">@font/sans_pro_semibold</item>
    </style>

    <style name="BaseTextAppearance.Label">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="fontFamily">@font/sans_pro_regular</item>
        <item name="android:textColor">@color/neutral_300</item>
    </style>

    <style name="BaseTextAppearance.Label.Bold">
        <item name="fontFamily">@font/sans_pro_semibold</item>
    </style>

    <style name="BaseTextAppearance.Small.Bold">
        <item name="fontFamily">@font/sans_pro_semibold</item>
    </style>

    <style name="BaseTextAppearance.Content">
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="BaseTextAppearance.Content.Bold">
        <item name="fontFamily">@font/sans_pro_semibold</item>
    </style>

    <style name="BaseTextAppearance.Error">
        <item name="android:textColor">?errorTextColor</item>
        <item name="android:textAppearance">@style/BaseTextAppearance</item>
    </style>

    <style name="ListItemImage">
        <item name="android:background">@drawable/bg_rectangle_with_radius4</item>
        <item name="android:backgroundTint">@color/mercury</item>
    </style>

    <style name="BaseTextAppearance.AppTextInput">
        <item name="android:imeOptions">actionNext|flagNoExtractUi</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textColorHint">@color/neutral_300</item>
        <item name="android:textAppearance">@style/BaseTextAppearance.Paragraph.Small</item>
    </style>

    <style name="BaseTextAppearance.AutoCompleteTextView" parent="@style/BaseTextAppearance.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textColorHint">@color/neutral_300</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="AppTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/default_corner_radius</item>
        <item name="android:gravity">center</item>
        <item name="rippleColor">?colorOnSurface</item>
        <item name="android:textAppearance">@style/BaseTextAppearance</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="AppTextButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/default_corner_radius</item>
        <item name="android:gravity">center</item>
        <item name="rippleColor">?colorOnSurface</item>
        <item name="android:textAppearance">@style/BaseTextAppearance</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="TextButton" parent="BaseTextAppearance">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="BaseTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="TintedProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="RoundedBottomDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomModalStyle</item>
    </style>

    <style name="RoundedBottomModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
</resources>
